<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context="com.example.minaring.hackaton.ProfileFragment"
             android:background="#ffffff">

    <!-- TODO: Update blank fragment layout -->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="1">

            <ImageView
                android:layout_width="match_parent"
                app:srcCompat="@mipmap/ic_launcher"
                android:id="@+id/imageView2"
                android:paddingBottom="10dp"
                android:layout_weight="1"
                android:layout_height="400dp"/>

            <TextView
                android:text="Acc. # : 1000001"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/textViewUID"
                android:paddingBottom="10dp"
                android:textSize="24sp"
                android:textColor="#000000"
                android:layout_weight="1"
                android:layout_marginStart="15dp"/>

            <TextView
                android:text="John Jhomar D. Egualada (Jomar)"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/textViewFullName"
                android:paddingBottom="10dp"
                android:textSize="24sp"
                android:textColor="#000000"
                android:layout_weight="1"
                android:layout_marginStart="15dp"/>

            <TextView
                android:text="Balance : 10,000"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/textViewBalance"
                android:paddingBottom="10dp"
                android:textSize="24sp"
                android:textColor="#000000"
                android:layout_weight="1"
                android:layout_marginStart="15dp"/>

            <TextView
                android:text="Currency : PHP"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/textViewCurrency"
                android:paddingBottom="10dp"
                android:textSize="24sp"
                android:textColor="#000000"
                android:layout_weight="1"
                android:layout_marginStart="15dp"/>

            <TextView
                android:text="Status : Active"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/textViewStatus"
                android:paddingBottom="10dp"
                android:textSize="24sp"
                android:textColor="#000000"
                android:layout_weight="1"
                android:layout_marginStart="15dp"/>
        </LinearLayout>
    </ScrollView>

</FrameLayout>
